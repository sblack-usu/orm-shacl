@prefix dash: <http://datashapes.org/dash#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix schema: <http://schema.org/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix dc: <http://purl.org/dc/elements/1.1/> .
@prefix hsterms: <http://hydroshare.org/terms/> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix hsresource: <http://www.hydroshare.org/resource/> .
@prefix hsuser: <http://www.hydroshare.org/user/> .

schema:HSResourceShape
    a sh:NodeShape ;
    sh:name "resource" ;
    sh:targetClass hsterms:resource ;
    sh:property [
        sh:name "title" ;
        sh:path dc:title ;
        sh:datatype xsd:string ;
        sh:maxCount 1 ;
        sh:minCount 1 ;
    ] ;
    sh:property [
        sh:name "version" ;
        sh:path dc:version ;
        sh:datatype xsd:integer ;
        sh:maxCount 1 ;
        sh:minCount 1 ;
    ] ;
    sh:property [
        sh:name "value" ;
        sh:path dc:value ;
        sh:datatype xsd:integer ;
    ] ;
    sh:property [
        sh:name "language" ;
        sh:path dc:language ;
        sh:datatype xsd:string ;
        sh:maxCount 1 ;
        sh:minCount 1 ;
        sh:in ( "eng" "es" ) ;
    ] ;
    sh:property [
        sh:name "subject" ;
        sh:path dc:subject ;
        sh:datatype xsd:string ;
    ] ;
    sh:property [
        a sh:NodeShape ;
        sh:name "extended_metadata" ;
        sh:targetClass hsterms:extendedMetadata ;
        sh:path hsterms:extendedMetadata ;
        sh:property [
            sh:name "key" ;
            sh:path hsterms:key ;
            sh:datatype xsd:string ;
            sh:minCount 1 ;
            sh:maxCount 1 ;
        ] ;
        sh:property [
            sh:name "value" ;
            sh:path hsterms:value ;
            sh:datatype xsd:string ;
            sh:minCount 1 ;
            sh:maxCount 1 ;
        ] ;
    ] ;
    sh:property [
        a sh:NodeShape ;
        sh:name "coverage" ;
        sh:targetClass dc:coverage ;
        sh:path dc:coverage ;
        sh:property [
            sh:name "box" ;
            a dcterms:box ;
            sh:path rdf:value ;
            sh:datatype xsd:string ;
            sh:pattern ".*" ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
        ] ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:name "creator" ;
        sh:path dc:creator ;
        sh:datatype xsd:string ;
        sh:pattern ".*" ;
        sh:minCount 1 ;
    ] .
